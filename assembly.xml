<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>true</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/app</directory>
            <outputDirectory>/src/app</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <outputDirectory>/src/bin</outputDirectory>
            
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/db</directory>
            <outputDirectory>/src/db</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/config</directory>
            <outputDirectory>/src/config</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/storage</directory>
            <outputDirectory>/src/storage</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/lib</directory>
            <outputDirectory>/src/lib</outputDirectory>
        </fileSet>
    </fileSets>
     <files>
        <file>
            <source> Gemfile</source>
            <outputDirectory>/src</outputDirectory>
        </file>
        <file>
            <source>Gemfile.lock</source>
            <outputDirectory>/src</outputDirectory>
        </file>
        <file>
            <source>config.ru</source>
            <outputDirectory>/src</outputDirectory>
        </file>
        <file>
            <source>Rakefile</source>
            <outputDirectory>/src</outputDirectory>
        </file>
        <file>
            <source>babel.config.js</source>
            <outputDirectory>/src</outputDirectory>
        </file>
        <file>
            <source>postcss.config.js</source>
            <outputDirectory>/src</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>target</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>